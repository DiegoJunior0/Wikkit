@page "/currentevents"
@using Wikkit.Data;
@inject WikipediaDataService dataService;

<PageTitleSetter PageTitle="Current Events" />

@if (articles == null || articles.Count == 0)
{
    <div>Loading...</div>
}
else
{
    <InfiniteScroll ObserverTargetId="observerTarget" ObservableTargetReached="(e) => GetArticles()">

        @foreach (var article in articles)
        {
            <ArticleCard ArticleData=article />
        }

        <span id="observerTarget">
            <ArticleCard Title="Loading..." />
        </span>

    </InfiniteScroll>

}

@code {
    List<ArticlePageData> articles = new();

    int daysOffset = 0;

    string cont = "";

    protected override async Task OnInitializedAsync()
    {
        await GetArticles();
    }

    private async Task GetArticles()
    {

        DateTime date = DateTime.Now.AddDays(-daysOffset - 1);

        if (cont == "")
        {
            ArticlePageData dateHeaderArticle = new();
            dateHeaderArticle.title = date.ToString("yyyy MMMM dd");
            articles.Add(dateHeaderArticle);
        }

        (var newArticles, cont) = await dataService.GetCurrentEvents(date, cont);        

        articles.AddRange(newArticles);

        if (cont == "") daysOffset++;

    }

}
