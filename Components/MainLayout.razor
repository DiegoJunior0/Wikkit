@inherits LayoutComponentBase

<CascadingValue Value="this">
 
    <div class="page bg-black min-vh-100" @onscroll=@OnScroll>

        <div class="bg-dark">        
            <NavMenu PageTitle=@_pagetitle />
        </div>

        <main>
            <article class="content px-2">
                @Body
            </article>
        </main>
    </div>
</CascadingValue>

@code
{
    private string _pagetitle;

    public string PageTitle
    {
        get => _pagetitle;
        set
        {
            _pagetitle = value;
            InvokeAsync(() => StateHasChanged());
        }
    }

    private void OnScroll()
    {
        var t = 0;

        t++;
    }

}
